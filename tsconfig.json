{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": false,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2022"
    ]
  },
  "include": [
    "src/**/*",
    "jest.config.js"
  ],
  "exclude": [
    "jest.config.js",
    "jest.config.d.ts",
    "node_modules"
  ]
}
